<html>
<head>
  <title>Threshold</title>
  <link rel="icon" href="/favicon.ico" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/css/bootstrap.min.css" rel="stylesheet">
  <link href="/css/navbar.css" rel="stylesheet">

</head>
<body>
  <div class="container">
    <% include navbar %>
    <div class="jumbotron">
      <h1>Threshold</h1>
      <p>Text 17786530430</p>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">What?</h3>
      </div>
      <div class="panel-body">
        Something, Something, Something!
      </div>
      <a href="http://circumpunct.ca">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createModal">
          Create a room!
        </button>
      </a>
    </div>
  </div>
  <div class="modal fade" id="createModal" role="dialog" aria-labelledby="createLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Create a Room:</h4> 
        </div>
        <div class="modal-body">
          <div class="input-group">
            <label for="nameInput">Room Name</label>
            <input class="form-control" type="name" id="nameInput" placeholder="Enter Room Name">
          </div>
          </br>
          <div class="input-group">
            <label for="numberInput">Subscribe Number</label>
            <input class="form-control" type="tel" id="numberInput" placeholder="Enter Subscribe #">
          </div>
        </div>
        <div class="modal-footer">
          <button onclick="sendCreateRoom();" class="btn btn-primary" >Create!</button>
        </div>
      </div>
    </div>
  </div>
  <script src="socket.io/socket.io.js"></script>
  <script src="/js/jquery.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script>
    $('#nav-threshold').addClass('active');

    var sendCreateRoom = function(){
      // TODO this doesn't work properly
      var socket = io.connect('circumpunct.ca');

      socket.on('connect', function(){
        socket.emit('createRoom', { room: $('#nameInput').val(), user: $('#numberInput').val() });
      });

      socket.on('roomCreated', function(data){
        window.location.assign('http://circumpunct.ca/room?r=' + $('#nameInput').val())       
      });

      socket.on('roomExists', function(data){
        alert("Room exists, choose another room name!");
      });
    };
  </script>

</body>
</html>
